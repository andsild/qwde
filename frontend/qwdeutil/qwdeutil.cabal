cabal-version:       >=1.10

library
  ghc-options:
    -O2 -Wall
  exposed-modules: Data.Graph.Plotter
  other-extensions: BangPatterns
  hs-source-dirs:
    .
  build-depends:
    base < 5
    , colour
    , containers
    , heredoc
  default-language:
    Haskell2010

